{
  "parser": "@typescript-eslint/parser",
  "env": {
    "commonjs": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": "plugin:@typescript-eslint/recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "no-undef": ["error", { "typeof": true }]
  }
}
